@model DTOs.EventoDTOs.DtoAltaEvento

@{
    ViewData["Title"] = "AltaEvento";
}

<h1>AltaEvento</h1>

<h4>DtoAltaEvento</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AltaEvento">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="DisciplinaID">
                    @foreach (var disciplina in Model.Disciplinas)
                    {
                        <option value="@disciplina.Id">@disciplina.Nombre</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label"></label>
                <input asp-for="FechaInicio" class="form-control" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>

                <label asp-for="FechaFin" class="control-label"></label>
                <input asp-for="FechaFin" class="form-control" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>



                <div class="form-group">
                    <select asp-for="AtletasID" multiple="multiple">
                        @foreach (var atleta in Model.Atletas)
                        {
                            <option value="@atleta.id">@atleta.NombreCompleto</option>
                        }
                    </select>
                </div>




            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<p>@ViewBag.msg</p>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
